{
  "extends": [
    "plugin:storybook/recommended",
    "plugin:cypress/recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_"
      }
    ],
    "no-console": ["error", { "allow": ["info", "warn", "error"] }],
    "no-alert": "error"
  }
}
